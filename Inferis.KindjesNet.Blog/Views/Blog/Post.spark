<viewdata model="Inferis.KindjesNet.Blog.Models.Post" />

<set Title="Model.Title" /> 

<h2>${Model.Title}</h2>

<p>Door ${Model.Author.Nick}</p>
<div class="postbody">
    <if condition="Model.LegacyId.GetValueOrDefault(0) > 0">
        !{Model.Body}
    <else />
        ${Model.Body}
    </if>
</div>

